<% if current_user.clipping?(micropost) %>
  <% favorite = current_user.favorites.find_by(micropost_id: micropost.id) %>
  <%= link_to "UnFavorite", favorite_path(favorite, micropost_id: micropost.id), method: :delete, class: 'btn btn-primary btn-xs' %>
<% else %>
  <%= link_to "Favorite", favorites_path(micropost_id: micropost.id), method: :post, class: 'btn btn-primary btn-xs' %>
<% end %>